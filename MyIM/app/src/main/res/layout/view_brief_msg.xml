<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:minHeight="46dp">

    <ImageView
        android:id="@+id/briefmsg_head"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@string/briefmsg_head_description"
        android:cropToPadding="true"
        tools:srcCompat="@tools:sample/avatars[0]" />

    <TextView
        android:id="@+id/briefmsg_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_toEndOf="@+id/briefmsg_head"
        android:layout_toRightOf="@+id/briefmsg_head"
        android:text="@string/error"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/briefmsg_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/briefmsg_head"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="3dp"
        android:layout_toEndOf="@+id/briefmsg_head"
        android:layout_toRightOf="@+id/briefmsg_head"
        android:text="@string/error"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/briefmsg_time"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:text="@string/error" />

    <ImageView
        android:id="@+id/briefmsg_notify"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:tint="#ff0000"
        android:visibility="visible"
        app:srcCompat="@android:drawable/sym_action_chat" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:scaleType="centerCrop"
        android:tint="#00aa00"
        app:srcCompat="@android:drawable/bottom_bar" />
</RelativeLayout>